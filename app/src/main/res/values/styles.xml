<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:alertDialogStyle">@style/dialogStyle</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--Preferences Theme, this is necessary-->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="SplashSTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/gradient_bottom</item>
        <item name="android:background">@drawable/splash_background</item>
    </style>

    <style name="IntroTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/gradient_bottom</item>
    </style>

    <style name="appTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="dialogStyle" parent="AlertDialog.AppCompat">
        <item name="android:color">@color/primaryText</item>
    </style>
    <!-- ACCOUNTKIT THEME-->
    <style name="AppLoginTheme" parent="Theme.AccountKit">
        <item name="com_accountkit_background">@drawable/application_bacground</item>
        <item name="com_accountkit_background_color">@android:color/transparent</item>
        <item name="com_accountkit_input_background_color">@color/gradient_bottom</item>
        <item name="com_accountkit_button_disabled_background_color">@color/login_btn_disabled</item>
        <item name="com_accountkit_button_background_color">@color/gradient_bottom</item>
        <item name="com_accountkit_primary_text_color">@color/white</item>
        <item name="com_accountkit_input_text_color">@color/white</item>
        <item name="com_accountkit_text_color">@color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
