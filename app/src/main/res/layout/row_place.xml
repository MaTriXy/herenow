<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/gradient_bottom"
    android:clickable="true"
    android:focusable="true"
    android:paddingBottom="4dp"
    android:paddingEnd="@dimen/row_padding_end"
    android:paddingLeft="@dimen/row_padding_end"
    android:paddingRight="@dimen/row_padding_start"
    android:paddingStart="@dimen/row_padding_start"
    android:paddingTop="@dimen/row_padding_top">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_place_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:padding="10dp"
        android:background="@drawable/circle_with_background"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/tv_place_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/img_place_icon"
        android:layout_toRightOf="@id/img_place_icon"
        android:maxLines="1"
        android:paddingEnd="0dp"
        android:paddingLeft="16dp"
        android:paddingRight="0dp"
        android:paddingStart="16dp"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="16sp" />

</RelativeLayout>