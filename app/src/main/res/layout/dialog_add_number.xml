<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginStart="@dimen/size16"
    android:layout_marginLeft="@dimen/size16"
    android:layout_marginEnd="@dimen/size16"
    android:layout_marginRight="@dimen/size16"
    android:layout_height="match_parent">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_name"
        android:textColorHint="#515151"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size16">

        <EditText
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome (opcional)" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#515151"
        android:layout_below="@id/input_name"
        android:layout_marginTop="@dimen/size16">

        <EditText
            android:textColor="#000"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Numero de telefone" />
    </android.support.design.widget.TextInputLayout>
</RelativeLayout>